---
import ArticleCard from '../components/ArticleCard.astro'

const { entries } = Astro.props
---

<main>
  {entries.length && entries.map((entry: any) => (
    <div>
      <ArticleCard entry={entry} />
    </div>
  ))}
</main>

<style>
main {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  gap: 0 5rem;
  max-height: 60vh;
  @media screen and (min-width: 960px) {
    gap: 0 10rem;      
  }
  div {
    width: 20rem;
    @media screen and (min-width: 1280px) {
      width: 30rem;    
    }
    &:nth-child(2n) {
      transform: translate(0, calc(var(--font-size-1) * -2)) scale(--velocity)
    }
    &:nth-child(3n) {
      transform: translate(0, calc(var(--font-size-1) * 3))
    }
    &:nth-child(4n) {
      transform: translate(0, calc(var(--font-size-1) * -3))
    }
    &:nth-child(5n) {
      transform: translate(0, calc(var(--font-size-1) * 2))
    }
  }
}
</style>